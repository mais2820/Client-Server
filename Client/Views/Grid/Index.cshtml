<table id="myTable" class="table table-striped table-hover">
    <h1 id="title">Data Table</h1><br />
    <thead class="table-light">
        <tr>
            <th>No</th>
            <th>Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody id="tbodySW"></tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="modalSW" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-secondary text-white">
                <h5 class="modal-title" id="pokemonModalLabel">Pokemon Info</h5>
            </div>
            <div class="modal-body bg-warning text-dark">
                <div class="row border border-0">
                    <div class="col-4 text-center">
                        <img src="" alt="Pokemon Image" id="pokemonImage" class="img-fluid">
                    </div>
                    <div class="col-8">
                        <div class="text-left mt-2">
                            <span class="badge badge-primary bg-success text-white" id="pokemonId"></span><br />
                            <span class="badge badge-secondary bg-success text-white" id="pokemonTypes"></span>
                        </div>
                        <div class="mt-3" id="statsContainer" style="width:75%"></div>
                        <div class="mt-3" id="abilitiesContainer"></div>
                    </div>
                </div>
            </div>
            <div class="modal-footer bg-primary">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>



              